{{>header}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name ..." autocomplete="off">
                        <input type="submit" class="submit-btn" value="Search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">{{day}}</p>
                        <p id="today_date">{{date}} {{month}}</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">City</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="main-temp"></span><span>&nbsp;</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fas fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{>footer}}